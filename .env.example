# Environment variables template for local development
# Copy this to .env and fill in your values (DO NOT commit .env to git)

# Database (Railway provides these when you add a MySQL plugin)
MYSQLHOST=mysql.railway.internal
MYSQLPORT=3306
MYSQLDATABASE=railway
MYSQLUSER=root
MYSQLPASSWORD=your-db-password

# App / Security
APP_JWT_SECRET=your-long-random-secret-key-here
APP_JWT_EXPIRATION_MS=86400000

# CORS / Frontend origin(s)
APP_CORS_ALLOWED_ORIGINS=https://florist-frontend-phi.vercel.app,http://localhost:5173

# Razorpay (payment)
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret

# Admin seeder (initial admin; change before production)
APP_ADMIN_EMAIL=admin@florist.com
APP_ADMIN_PASSWORD=Admin@123
APP_ADMIN_NAME=Platform Admin

# Optional Hikari tuning (defaults are in app if left unset)
HIKARI_MAX_POOL=10
HIKARI_MIN_IDLE=2
HIKARI_CONN_TIMEOUT=30000
HIKARI_IDLE_TIMEOUT=600000

# Container port (Railway will set PORT automatically; keep default 8080)
PORT=8080
