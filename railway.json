{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfigPath": "./nixpacks.toml"
  },
  "deploy": {
    "startCommand": "java -Xmx512m -Dserver.port=$PORT -Dspring.profiles.active=railway -jar app.jar",
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE"
  }
}
